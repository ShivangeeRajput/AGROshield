<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.agroshield">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iconn"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomePage"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.example.agroshield.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.agroshield.activity.RegisterActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.agroshield.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.agroshield.pest_Detection"
            android:exported="false" />
        <activity
            android:name=".new_cam_page"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.example.agroshield.menupage"
            android:exported="false" />
        <activity
            android:name="com.example.agroshield.Authentication"
            android:exported="false"/>

        <activity
            android:name="com.example.agroshield.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.agroshield.ContactusActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.agroshield.ProfileActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.example.agroshield.ForgotPassword"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        
        
    </application>

</manifest>